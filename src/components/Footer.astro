---
// src/components/Footer.astro
import { getRelativeLocaleUrl } from 'astro:i18n';
import { ui, defaultLang } from '../i18n/ui';

const lang = Astro.currentLocale || defaultLang;
const t = ui[lang as keyof typeof ui];

const catNames = {
  it: {
    ceramica: 'Ceramica',
    pinturas: 'Dipinti',
    tejidos: 'Tessuti',
    mosaicos: 'Mosaici',
    munecas: 'Bambole',
    otros: 'Altri',
    eventos: 'Eventi'
  },
  es: {
    ceramica: 'Cerámica',
    pinturas: 'Pinturas',
    tejidos: 'Tejidos',
    mosaicos: 'Mosaicos',
    munecas: 'Muñecas',
    otros: 'Otros',
    eventos: 'Eventos'
  }
};

const cats = catNames[lang as keyof typeof catNames];
---

<footer class="w-full flex justify-center mt-auto">

  <div class="w-full max-w-6xl bg-[#00473e] rounded-t-3xl px-6 md:px-12 py-12 relative overflow-hidden">

    <div class="grid grid-cols-1 md:grid-cols-4 gap-10 relative z-10">

      <div class="flex items-start">
        <a href={getRelativeLocaleUrl(lang, '/')}>
            <img src="/LogoLaura.png" class="w-20 h-24 object-contain" alt="Logo Laura Porreca" />
        </a>
      </div>

      <div class="flex flex-col text-left">
        <a href={getRelativeLocaleUrl(lang, 'categorias')} class="text-white text-xl font-semibold mb-2 md:mb-2 hover:text-orange-200 transition-colors">
          {t['footer.categorias']}
        </a>
        
        <ul class="hidden md:flex flex-col space-y-2">
          <li><a href={getRelativeLocaleUrl(lang, 'ceramica')} class="text-white hover:underline">{cats.ceramica}</a></li>
          <li><a href={getRelativeLocaleUrl(lang, 'pinturas')} class="text-white hover:underline">{cats.pinturas}</a></li>
          <li><a href={getRelativeLocaleUrl(lang, 'tejidos')} class="text-white hover:underline">{cats.tejidos}</a></li>
          <li><a href={getRelativeLocaleUrl(lang, 'mosaicos')} class="text-white hover:underline">{cats.mosaicos}</a></li>
          <li><a href={getRelativeLocaleUrl(lang, 'munecas')} class="text-white hover:underline">{cats.munecas}</a></li>
          <li><a href={getRelativeLocaleUrl(lang, 'otros')} class="text-white hover:underline">{cats.otros}</a></li>
          <li><a href={getRelativeLocaleUrl(lang, 'eventos')} class="text-white hover:underline">{cats.eventos}</a></li>
        </ul>
      </div>

      <div class="flex flex-col text-left gap-2">
        <span class="text-white text-xl font-semibold mb-2 md:mb-2">{t['footer.contacto']}</span>
        <a class="text-white hover:text-orange-200" href="https://wa.me/+393760275469">+39 376 027-5469</a>
        <a class="text-white hover:text-orange-200 break-all" href="mailto:porrecalaura@gmail.com">porrecalaura@gmail.com</a>
      </div>

      <div class="flex flex-col text-left gap-3">
        <a class="text-white text-xl font-semibold" href={getRelativeLocaleUrl(lang, 'sobre-mi')}>
            {t['footer.sobremi']}
        </a>
        <a class="text-white hover:text-orange-200" href="https://www.facebook.com/tallerdearte.temperley" target="_blank" rel="noopener noreferrer">
          Facebook: Laura Porreca
        </a>
        <a class="text-white hover:text-orange-200" href="https://www.instagram.com/Laura_Porreca" target="_blank" rel="noopener noreferrer">
          Instagram: Laura_Porreca
        </a>
      </div>

    </div>

    <img 
      src="/FloresFooter.png"
      alt="Decoración Flores"
      class="absolute bottom-0 right-0 w-32 md:w-56 pointer-events-none opacity-80 md:opacity-100"
    />
  </div>
</footer>