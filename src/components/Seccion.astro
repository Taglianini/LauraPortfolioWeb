---
// src/components/Seccion.astro
import { defaultLang } from '../i18n/ui';

// 1. Detectar el idioma actual (IT o ES)
const lang = Astro.currentLocale || defaultLang;

// 2. EL DICCIONARIO DE TEXTOS
// Aquí es donde tienes que escribir tu contenido real.
const texts = {
  it: {
    titulo: "Che cos’è l’arte?", 
    parrafo: `L’arte è la capacità dell’essere umano di creare opere attraverso tecniche, ingegno ed esprimendo emozioni, idee e percezioni, stimolando la sensibilità estetica.
    `,
    altImgIzq: "Descrizione immagine sinistra", // Importante per Google (SEO)
    altImgDer: "Descrizione immagine destra"
  },
  es: {
    titulo: "¿Qué es el arte?",
    parrafo: `El arte es una habilidad de la gente de crear obras con ciertas técnicas,ingenio y exprimir sus emociones, ideas y percepciones y estimular la percepción estética.`,
    altImgIzq: "Descripción imagen izquierda",
    altImgDer: "Descripción imagen derecha"
  }
};

// 3. Seleccionamos el texto correcto según el idioma
const t = texts[lang as keyof typeof texts];
---

<section class="w-full px-8 py-30">
  <div class="max-w-7xl mx-auto flex flex-col md:flex-row items-center justify-center gap-12">

    <img 
      src="/LauraPorrecaSec.png" 
      alt={t.altImgIzq}
      class="w-[300px] md:w-[350px] rounded-xl object-cover shadow-lg"
    />

    <div class="max-w-125 text-white font-sans text-left">
      <h2 class="text-3xl font-light mb-6">
        {t.titulo}
      </h2>
      
      <p class="text-lg leading-relaxed whitespace-pre-line">
        {t.parrafo}
      </p>
    </div>

    <img 
      src="/LauraPorrecaSec2.png" 
      alt={t.altImgDer}
      class="w-[220px] md:w-[250px] rounded-xl object-cover shadow-lg"
    />

  </div>
</section>